<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Selecciona_Categoria_Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#FF5722"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORIAS"
            android:textColor="@color/white"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"/>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cateHomero"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        app:cardBackgroundColor="#2196F3"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            android:background="@drawable/homeros" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cateGatos"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center|right"
        android:layout_marginRight="30dp"
        app:cardBackgroundColor="#FFC107"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="500dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            android:background="@drawable/gato" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cate3"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center|left|bottom"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="60dp"
        app:cardBackgroundColor="#009688"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            android:background="@drawable/silvido" />

    </androidx.cardview.widget.CardView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>